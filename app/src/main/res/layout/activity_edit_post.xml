<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back_blue_32dp"
            android:background="@drawable/ic_custom_1"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:onClick="cnClickCancel"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/recPicture"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Spinner
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_custom_3"
                android:clickable="true"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:singleLine="true"
                android:textColor="#111"
                android:textSize="14sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="#fff"
                android:paddingStart="7.5dp"
                android:paddingEnd="7.5dp"
                android:text="Loại nhà trọ"
                android:textColor="@color/colorBlue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/edtDescribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_custom_3"
                android:gravity="top"
                android:minHeight="100dp"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:paddingEnd="15dp"
                android:paddingBottom="15dp"
                android:textColor="#111"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="#fff"
                android:paddingStart="7.5dp"
                android:paddingEnd="7.5dp"
                android:text="Mô tả"
                android:textColor="@color/colorBlue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/edtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_custom_3"
                android:inputType="number"
                android:maxLength="12"
                android:minHeight="40dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:singleLine="true"
                android:textColor="#111"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="#fff"
                android:paddingStart="7.5dp"
                android:paddingEnd="7.5dp"
                android:text="Giá tiền"
                android:textColor="@color/colorBlue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_custom_3"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:id="@+id/txtLatitude"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_custom_3"
                            android:layout_marginTop="10dp"
                            android:text="10.8400897"
                            android:gravity="center"
                            android:textColor="#111"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:background="#fff"
                            android:paddingStart="7.5dp"
                            android:paddingEnd="7.5dp"
                            android:text="Vĩ độ"
                            android:textColor="@color/colorBlue"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp">

                        <TextView
                            android:text="106.7399723"
                            android:id="@+id/txtLongitude"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_custom_3"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textColor="#111"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:background="#fff"
                            android:paddingStart="7.5dp"
                            android:paddingEnd="7.5dp"
                            android:text="Kinh độ"
                            android:textColor="@color/colorBlue"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>
                <Button
                    android:onClick="onClickSelectPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Chọn Vị Trí Trên Bản Đồ"
                    android:textColor="#fff"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_custom_4"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="#fff"
                android:paddingStart="7.5dp"
                android:paddingEnd="7.5dp"
                android:text="Tọa độ"
                android:textColor="@color/colorBlue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Spinner
                android:id="@+id/edtCity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/ic_custom_3"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="#111"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="#fff"
                android:paddingStart="7.5dp"
                android:paddingEnd="7.5dp"
                android:text="Thành Phố/Tỉnh"
                android:textColor="@color/colorBlue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Spinner
                android:id="@+id/edtDistrict"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_custom_3"
                android:enabled="false"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:singleLine="true"
                android:textColor="#111"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="#fff"
                android:paddingStart="7.5dp"
                android:paddingEnd="7.5dp"
                android:text="Quận/Huyện"
                android:textColor="@color/colorBlue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp">

            <EditText
                android:id="@+id/edtStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_custom_3"
                android:minHeight="40dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:singleLine="true"
                android:textColor="#111"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="#fff"
                android:paddingStart="7.5dp"
                android:paddingEnd="7.5dp"
                android:text="Tên đường"
                android:textColor="@color/colorBlue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>

        <Button
            android:onClick="onClickCreatePosts"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Sửa phòng"
            android:textColor="#fff"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_custom_4"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
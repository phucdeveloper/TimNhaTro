<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="Quên mật khẩu"
        android:textColor="@color/colorBlue"
        android:textSize="23sp"
        android:textStyle="bold" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <EditText
            android:id="@+id/edtNumberPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ic_custom_3"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:gravity="center"
            android:inputType="phone"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#111"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="#fff"
            android:paddingStart="7.5dp"
            android:paddingEnd="7.5dp"
            android:text="Số điện thoại"
            android:textColor="@color/colorBlue"
            android:textSize="14sp"
            android:textStyle="bold" />
    </FrameLayout>
    <Button
        android:id="@+id/btnVerifyPhone"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Lấy mã xác thực"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_custom_4"/>
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <EditText
            android:visibility="invisible"
            android:id="@+id/edtVerifyCodePhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ic_custom_3"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:gravity="center"
            android:maxLength="6"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#111"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtVerifyCode"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="#fff"
            android:paddingStart="7.5dp"
            android:paddingEnd="7.5dp"
            android:text="Mã xác thực"
            android:textColor="@color/colorBlue"
            android:textSize="14sp"
            android:textStyle="bold" />
    </FrameLayout>
    <Button
        android:visibility="invisible"
        android:id="@+id/btnResetpass"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Đổi mật khẩu"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_custom_4"
        android:layout_marginBottom="250dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>